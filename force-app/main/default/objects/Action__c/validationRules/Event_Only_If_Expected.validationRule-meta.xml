<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Event_Only_If_Expected</fullName>
    <active>true</active>
    <errorConditionFormula>if(ISBLANK(Trailhead_Event__c), ISPICKVAL(Operation__c,&quot;Include Event&quot;), NOT(ISPICKVAL(Operation__c,&quot;Include Event&quot;)))</errorConditionFormula>
    <errorDisplayField>Trailhead_Event__c</errorDisplayField>
    <errorMessage>Only assign an event if the operation is &quot;Include Event&quot;</errorMessage>
</ValidationRule>
